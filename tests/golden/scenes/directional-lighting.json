{
  "description": "Directional lighting test - sun-like directional light",
  "ops": [
    {
      "op": "load",
      "path": "models/cube.obj",
      "name": "TestCube",
      "position": [0, 0, 0],
      "scale": [1.5, 1.5, 1.5]
    },
    {
      "op": "add_light",
      "type": "directional", 
      "direction": [-0.5, -1, -0.3],
      "color": [1, 0.95, 0.8],
      "intensity": 1.2
    },
    {
      "op": "set_camera_preset",
      "preset": "iso_fl",
      "target": [0, 0, 0],
      "fov": 50,
      "margin": 0.3
    },
    {
      "op": "set_background",
      "color": [0.15, 0.2, 0.35]
    }
  ]
}