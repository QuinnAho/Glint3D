  "changes": [
    {
      "version": "0.3.0",
      "date": "2024-09-11",
      "type": "architecture_overhaul",
      "description": "Separated engine from platform code, introduced intent-based SDK",
      "changes": {
        "added": [
          "platforms/ directory for desktop and web specific code",
          "sdk/web/ with versioned TypeScript interface",
          "ai-meta/ directory with machine-readable constraints",
          "schemas/json_ops_v2.json with intent-based operations",
          "tools/arch_check.py for dependency validation"
        ],
        "moved": [
          "web/* → platforms/web/",
          "engine/src/main.cpp → platforms/desktop/main.cpp",
          "engine/imgui* → platforms/desktop/imgui/",
          "engine/src/panels/ → platforms/desktop/panels/"
        ],
        "deprecated": [
          "Direct JSON Ops v1 access (use SDK intents)",
          "Platform-specific code in engine/ directory"
        ]
      },
      "breaking_changes": [
        "Build system requires platform selection",
        "Web UI imports must use platforms/web/ paths",
        "Desktop main entry point moved to platforms/desktop/"
      ],
      "migration_guide": {
        "web_builds": "Update import paths from web/ to platforms/web/",
        "desktop_builds": "Update CMakeLists.txt to reference platforms/desktop/",
        "ai_integrations": "Use sdk/web/glint3d.ts instead of direct JSON Ops"
      }
    }
  ],
