{
  "description": "Camera preset test - consistent positioning across presets",
  "ops": [
    {
      "op": "load",
      "path": "models/cube.obj",
      "name": "TestCube",
      "position": [0, 0, 0],
      "scale": [1, 2, 0.5]
    },
    {
      "op": "add_light",
      "type": "point",
      "position": [3, 3, 3],
      "color": [1, 1, 1],
      "intensity": 1.5
    },
    {
      "op": "add_light", 
      "type": "directional",
      "direction": [-1, -0.5, -0.5],
      "color": [0.3, 0.4, 0.6],
      "intensity": 0.8
    },
    {
      "op": "set_camera_preset",
      "preset": "front",
      "target": [0, 0, 0], 
      "fov": 45,
      "margin": 0.25
    },
    {
      "op": "set_background",
      "color": [0.25, 0.25, 0.25]
    }
  ]
}