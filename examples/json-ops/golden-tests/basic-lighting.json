{
  "description": "Basic lighting test - point light with default sphere",
  "ops": [
    {
      "op": "load",
      "path": "models/sphere.obj",
      "name": "TestSphere",
      "position": [0, 0, 0],
      "scale": [1, 1, 1]
    },
    {
      "op": "add_light",
      "type": "point",
      "position": [2, 2, 2],
      "color": [1, 1, 1],
      "intensity": 1.0
    },
    {
      "op": "set_camera",
      "position": [3, 2, 3],
      "target": [0, 0, 0],
      "fov": 45
    },
    {
      "op": "set_background",
      "color": [0.2, 0.2, 0.3]
    }
  ]
}