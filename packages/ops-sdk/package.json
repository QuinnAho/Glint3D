{
  "name": "@glint3d/ops-sdk",
  "version": "0.3.0",
  "description": "TypeScript SDK for Glint3D JSON Ops v1",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./types": {
      "types": "./dist/types.d.ts",
      "import": "./dist/types.js"
    }
  },
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "generate-types": "node scripts/generate-types.js",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "glint3d",
    "json-ops",
    "3d",
    "graphics",
    "webgl"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/glint3d",
    "directory": "packages/ops-sdk"
  },
  "license": "MIT",
  "devDependencies": {
    "typescript": "^5.4.0"
  },
  "peerDependencies": {
    "@glint3d/wasm-bindings": "^0.3.0"
  },
  "engines": {
    "node": ">=16"
  }
}