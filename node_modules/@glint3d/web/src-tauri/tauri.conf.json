{
  "$schema": "https://schema.tauri.app/config/1",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devPath": "http://localhost:5173",
    "beforeBuildCommand": "npm run build",
    "distDir": "../dist"
  },
  "package": {
    "productName": "Glint3D",
    "version": "0.1.0"
  },
  "tauri": {
    "windows": [
      {
        "title": "Glint3D",
        "width": 1280,
        "height": 800,
        "resizable": true
      }
    ],
    "bundle": {
      "active": false,
      "identifier": "com.glint3d.app"
    }
  }
}
